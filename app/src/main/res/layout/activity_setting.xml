<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/view_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llLanguage"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/ripple_item_link_main_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag_normal"
                android:text="@string/activity_select_language_title" />

            <TextView
                android:id="@+id/tvLanguage"
                style="@style/edittext_normal"
                android:gravity="right|center_vertical"
                android:padding="5dp"
                android:text="简体中文"
                android:textColor="@color/font_sec_grey" />

            <ImageView style="@style/style_next" />
        </LinearLayout>

        <View
            style="@style/line_bg_grey"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llCoin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/ripple_item_link_main_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="visible">

            <TextView
                style="@style/textview_tag_normal"
                android:text="@string/activity_select_coin_title" />

            <TextView
                android:id="@+id/tvMoney"
                style="@style/edittext_normal"
                android:background="@color/transparent"
                android:gravity="right|center_vertical"
                android:padding="5dp"
                android:text="CNY" />

            <ImageView style="@style/style_next" />
        </LinearLayout>

        <View
            style="@style/line_bg_grey"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llCache"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/ripple_dark_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag_normal"
                android:text="清除缓存" />

            <TextView
                style="@style/edittext_normal"
                android:gravity="right|center_vertical"
                android:text="2.0M"
                android:textColor="@color/font_sec_grey" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
