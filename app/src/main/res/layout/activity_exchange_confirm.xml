<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/view_home_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@mipmap/icon_exchange_confirm_bg_top"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSellName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ETH"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvSellNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.00 ETH"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSellAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="xswjdbcdbcjdcbdjbcjbdcbdjbcldsbcjd"
                android:textColor="@color/white"
                android:textSize="@dimen/font_mini" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSellCoin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/eth" />

            <TextView
                android:id="@+id/tvSellMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="222.14545454"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_exchange_logo_confirm" />

            <ImageView
                android:id="@+id/ivBuyCoin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/usdt" />

            <TextView
                android:id="@+id/tvBuyMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="222.14545454"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@mipmap/icon_exchange_confirm_bg_bottom"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBuyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="USDT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvBuyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.00 USDT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBuyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="xswjdbcdbcjdcbdjbcjbdcbdjbcldsbcjd"
                android:textColor="@color/white"
                android:textSize="@dimen/font_mini" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textview_tag_normal"
                    android:text="@string/activity_transfer_pay_fee"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSeekPro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCoinName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progressDrawable="@drawable/seekbar_progress"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_thumb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_transfer_pay_slow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/activity_transfer_pay_common"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/activity_transfer_pay_fast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="1ETH = 205.12454512 USDT"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirm"
        style="@style/btn_option"
        android:text="@string/activity_exchange_confirm_btn" />

</LinearLayout>
